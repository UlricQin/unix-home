set nocp
set ru
set hls
set is
set nu
syntax enable
syntax on
set backspace=indent,eol,start
set whichwrap=b,s,<,>,[,]
set encoding=utf-8
set langmenu=zh_CN.UTF-8
set fileencodings=ucs-bom,utf-8,cp936,gb18030,big5,euc-jp,euc-kr,latin1
set ambiwidth=double
filetype plugin indent on 
set sw=4
set ts=4
set et
set smarttab
set lbr
set tw=120
set fo+=mB
set sm
set cin
set ai
set history=20
set selectmode=
set keymodel=
set selection=inclusive
set wildmenu
set guifont=Consolas:h12:cANSI
set mousemodel=popup

map <C-M> :tabnew<CR>
map <C-N> :tabnext<CR>
map <C-P> :tabpre<CR>
map <C-C> :tabclose<CR>
